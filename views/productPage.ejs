<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <title>Product</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark ">
      <div class="container-fluid ">
        <a class="navbar-brand" href="/allproducts">All Products</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/allcategory">Category-Master</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/productMaster">Product-Master</a>
            </li>
            
          </ul>
        </div>
      </div>
    </nav>

    
    <center>
      <h1>Product List</h1>
    </center>
    

    <table class="table table-striped table-hover" border="5px">
      <thead class="thead-light">
        <tr class="text-light bg-dark">
          <th scope="col">Sr.no</th>
          <th scope="col">ProductID</th>
          <th scope="col">ProductName</th>
          <th scope="col">CategoryID</th>
          <th scope="col">CategoryName</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < data.length; i++) { %>
          <tr>
            <th scope="row"><%= (currentPage - 1) * PAGE_SIZE + i + 1 %></th>
            <td><%= data[i].ProductId %></td>
            <td><%= data[i].ProductName %></td>
            <td><%= data[i].CategoryId %></td>
            <td><%= data[i].CategoryName %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
    <!-- Pagination lgic-->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item"><a class="page-link" href="/allproducts?page=<%= currentPage - 1 %>">Previous</a></li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>"><a class="page-link" href="/allproducts?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item"><a class="page-link" href="/allproducts?page=<%= currentPage + 1 %>">Next</a></li>
        <% } %>
      </ul>
    </nav>
    
  </body>
</html>
